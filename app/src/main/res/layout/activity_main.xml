<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="103dp"
            android:layout_height="63dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="165dp"
            android:gravity="center|top|left"
            android:text="Title:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="207dp"
            android:layout_height="61dp"
            android:layout_marginBottom="117dp"
            android:gravity="center|top"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="160dp"
            android:layout_height="73dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="165dp"
            android:gravity="center|top|left"
            android:text="Author Username:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_marginBottom="117dp"
            android:gravity="center|top"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonPalettes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="143dp"
        android:layout_marginRight="143dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Get Palette" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/color1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000" />

        <View
            android:id="@+id/color2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000" />

        <View
            android:id="@+id/color3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000" />

        <View
            android:id="@+id/color4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000" />

        <View
            android:id="@+id/color5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="123dp"
            android:layout_height="63dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="175dp"
            android:gravity="center|fill_horizontal|left|fill_vertical"
            android:text="Previous" />

        <Button
            android:id="@+id/buttonDownload"
            android:layout_width="124dp"
            android:layout_height="67dp"
            android:layout_gravity="center|fill_horizontal|fill_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="176dp"
            android:text="Download Palette" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="78dp"
            android:layout_height="59dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="175dp"
            android:gravity="center|fill_horizontal|fill_vertical"
            android:text="Next" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Palette" />

</LinearLayout>